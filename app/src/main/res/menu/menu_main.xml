<menu xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto">
<!--Adds new note
   adds menu for MainActivity-->
    <item
        android:enabled="true"
        android:title="@string/create"
        android:id="@+id/action_main_new_note"
        android:icon="@android:drawable/ic_menu_add"
        android:orderInCategory="0"
        app:showAsAction="always"
        />
    <item android:id="@+id/notesDB"
        android:title="view_db_data"
        android:orderInCategory="1"
        app:showAsAction="never"/>


    <!-- android:enabled="true" is Shown by activity
    android:icon using internal icon i.e add to add the new note
    represents add function
      Resource ID. A unique resource ID. To create a new resource ID for this item, use the form: "@+id/name".
       The plus symbol indicates that this should be created as a new ID.
    android:orderInCategory="0"is lowest the number higher in category
    app:showAsAction="always" shows the add
    -->
</menu>
